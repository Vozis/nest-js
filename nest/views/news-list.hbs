<a class='btn btn-primary' style='margin: 20px 0 20px 0' href='http://localhost:3000/news/create/new'>Создать новость</a>
{{#if news}}
  <div class="row">
    {{#each news}}
      <div class="col-lg-6">
        <div class="card" onclick="window.location.href = 'http://localhost:3000/news/details/{{this.id}}'">
          <img src='{{this.cover}}'
               class="card-img-top" style="height: 200px; object-fit: cover;" alt=''>
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Автор:
              {{this.user.firstName}} {{this.user.lastName}}</h6>
            <h6 class="card-subtitle mb-2 text-muted">Дата
            создания:
            {{this.createdAt}}</h6>
            <p class="card-text">{{this.description}}</p>
            <a href="details/
        {{this.id}}
      " class="btn btn-primary">Просмотреть новость</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1>Список новостей пуст!</h1>
{{/if}}